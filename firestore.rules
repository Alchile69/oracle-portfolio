// Oracle Portfolio 3.0 - Firestore Security Rules
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour les données publiques (lecture seule)
    match /public/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Règles pour les données de cache (lecture/écriture limitée)
    match /cache/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Règles pour les logs système (écriture seule pour les functions)
    match /logs/{document=**} {
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow write: if request.auth != null;
    }
    
    // Règles par défaut (accès restreint)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

